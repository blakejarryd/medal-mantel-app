{
  "cli": {
    "version": ">= 5.6.0"
  },
  "build": {
    "development-simulator": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "simulator": true
      }
    },
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal"
    },
    "production": {
      "ios": {
        "bundleIdentifier": "com.example.yourapp",
        "buildType": "app-store"
      },
      "android": {
        "package": "com.example.yourapp",
        "buildType": "app-bundle"
      }
    },
    "simulator": {
      "ios": {
        "simulator": true,
        "distribution": "internal"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "blakejarrydjohnston@gmail.com",
        "ascAppId": "your-app-store-connect-app-id",
        "appleTeamId": "NAVFS6288A"
      },
      "android": {
        "serviceAccountKeyPath": "./path/to/your-service-account-key.json",
        "track": "production"
      }
    }
  }
}
